
<% provide(:title, "Edit user") %>
<h1>プロフィールの編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="edit-container">
        <%= render 'shared/error_messages' %>

          <%= f.label :full_name, "フルネーム" %>
          <%= f.text_field :full_name, class: "form-control" %>

          <%= f.label :name, "ユーザーネーム" %>
          <%= f.text_field :name, class: 'form-control' %>

          <%= f.label :gender, "男性", {value: :male, style: "display: inline-block;"} %>
          <%= f.radio_button :gender, :male %>
          <%= f.label :gender, "女性", {value: :female, style: "display: inline-block;"} %>
          <%= f.radio_button :gender, :female %>
          <p>※非公開</p>

          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: 'form-control' %>
          <p>※非公開</p>

          <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
          <%= f.text_field :phone_number, class: 'form-control' %>
          <p>※非公開</p>

          <%= f.label :web_site, "ウェブサイト" %>
          <%= f.text_field :web_site, class: "form-control", placeholder: "https://www.insta_clone.com" %>

          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, class: "form-control", value: "Nice to meet you : )" %>

          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :password_confirmation, "パスワード確認" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>

          <%= f.submit "プロフィールを更新", class: "btn btn-primary" %>
        <% end %>

        <div class="gravatar_edit">
          <%= gravatar_for @user %>
          <a rel="noopener" href="https://gravatar.com/emails" target="_blank">change</a>
        </div>
      </div>
  </div>
</div>
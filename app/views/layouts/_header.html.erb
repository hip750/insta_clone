<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="header-container">
    <%= link_to image_tag("insta_clone_log.png", alt: "Insta Clone Logo", width: "100px"),
        root_path, class: "navbar-brand", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i>
          <% end %>
        </li>
        <% if logged_in? %>
          <li>
            <%= link_to root_path do%>
              <i class="fa fa-upload fa-2x"></i>
            <% end %>
          </li>
            <%= render "notifications/circle" %>
          <li>
            <%= link_to search_imageposts_path do %>
              <i class="fa fa-search fa-2x"></i>
            <% end %>
          </li>
          <li>
            <%= link_to users_path do%>
              <i class="fa fa-users fa-2x"></i>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-user fa-2x"></i> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user do %>
                  <i class="fa fa-user"></i> プロフィール
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(current_user) do %>
                  <i class="fa fa-edit"></i> ユーザー編集
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i> ログアウト
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path do %>
              <i class="fa fa-sign-in fa-2x"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
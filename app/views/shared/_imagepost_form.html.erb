<%= form_for(@imagepost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg, image/png" %>
  </span>
  <div class="field">
    <%= f.text_area :content, placeholder: "コメント" %>
  </div>
  <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $("#imagepost_image").bind("change", function() {
    let size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("画像サイズは 5MB 以下で投稿してください。");
      $("#imagepost_image").val("");
    }
  });
</script>
<% set_meta_tags title: '検索', description: 'Insta Clone App内の画像を自由記述で検索することができます。' %>

<h1>投稿の検索</h1>
<%= form_tag search_imageposts_path, method: :get do %>
  <div class="search-form">
    <%= text_field_tag :search, '', placeholder: "投稿を検索" %> 
  </div>
  <div class="search-btn">
    <%= submit_tag '検索', name: nil, class: "btn btn-primary" %>
  </div>
<% end %>
<br>
<ol class="imageposts">
  <%= render @imageposts %>
</ol>  

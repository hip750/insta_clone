<li id="imagepost-<%= imagepost.id %>">
  <%= link_to gravatar_for(imagepost.user, size: 50), imagepost.user %>
  <span class="user">
    <%= link_to imagepost.user.name, imagepost.user %>
  </span>
  <span class="content">
    <%= image_tag imagepost.display_image if imagepost.image.attached? %>
    <%= imagepost.content %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(imagepost.created_at) %>前.
  </span>

  <div id="likes-btn-<%= imagepost.id %>" class="likes-btn">
    <%= render partial: 'likes/like', locals: { imagepost: imagepost } %>
  </div>

  <%= link_to imagepost_path(imagepost.id) do %>
    <span>
      <i class="fa fa-comment comment-btn" aria-hidden="true"></i>
      <%= imagepost.comments.count %>
    </span>
  <% end %>

  <% if current_user?(imagepost.user) %>
    <%= link_to imagepost, method: :delete, data: { confirm: "本当に投稿を削除しますか？" } do %>
      <span>
        <i class="fa fa-trash trash-btn" aria-hidden="true"></i>
      </span>
    <% end %>
  <% end %>
</li>